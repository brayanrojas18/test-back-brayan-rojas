<?xml version="1.0"?>
<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.1/phpunit.xsd"
        colors="true"
>
   <testsuites>
        <testsuite name="unit">
            <directory phpVersion="8.2.4" phpVersionOperator=">=">tests/unit</directory>
        </testsuite>

        <testsuite name="integration">
            <directory phpVersion="8.2.4" phpVersionOperator=">=">tests/integration</directory>
        </testsuite>
    </testsuites>
    <logging>
        <testdoxHtml outputFile="reports/testdox.html"/>
    </logging>
</phpunit>